{
  "entities": {
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user was created."
        }
      },
      "required": [
        "id",
        "email",
        "createdAt"
      ]
    },
    "translationHistory": {
      "title": "Translation History",
      "description": "Stores the history of video translations for a user.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "videoName": {
          "type": "string"
        },
        "translatedText": {
          "type": "string"
        },
        "audioUrl": {
          "type": "string"
        },
        "videoUrl": {
          "type": "string"
        },
        "targetLanguage": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "userId",
        "videoName",
        "translatedText",
        "targetLanguage",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "email"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/userProfile"
      },
      "description": "User profile documents, keyed by user ID."
    },
    "/users/{userId}/history/{historyId}": {
      "schema": {
        "$ref": "#/backend/entities/translationHistory"
      },
      "description": "A subcollection for a user's translation history."
    }
  }
}
